<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.calmdemo">

    <uses-feature android:name="android.hardware.camera.ar" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Player"></activity>
        <activity android:name=".Music" />

        <activity android:name=".ForgotPassword" />
        <activity android:name=".Signup" />
        <activity android:name=".Login" />
        <activity android:name=".ViewExerciseActivity" />
        <activity android:name=".DailyTrainingActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ListExercisesActivity" />
        <activity android:name=".yogadashboard" />
        <activity android:name=".Breath" />
        <activity android:name=".ARCoreTime" />
        <activity android:name=".Dashboard" />
        <activity android:name=".ARCore" />
        <activity android:name=".MainDashboard" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>

</manifest>
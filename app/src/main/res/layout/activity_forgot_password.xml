<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDCE2C">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/shape_btn"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/shape_btn2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="Forgot Password?"
            android:textColor="#363636"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ETUName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/userbutton"
            android:textColorHint="@color/grey"
            android:textColor="#000000"
            android:hint="Username/E-Mail"
            android:inputType="text"
            android:paddingLeft="16dp" />

        <EditText
            android:id="@+id/ETPass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/userbutton"
            android:textColorHint="@color/grey"
            android:textColor="#000000"
            android:hint="Password"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/ETConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/userbutton"
            android:textColorHint="@color/grey"
            android:textColor="#000000"
            android:hint="Confirm Password"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:visibility="gone"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif"
            android:text="Verify User"
            android:background="@drawable/logonbtn"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:onClick="signPage"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:text="Back to "
                android:textSize="15dp"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/TXTLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:text="SignIn"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/grey" />



        </LinearLayout>


    </LinearLayout>







</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary1"
    tools:context=".Breath">


    <ImageView
        android:id="@+id/IVBreathe"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtCount"
        android:background="@drawable/circlecount"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_below="@id/IVBreathe"
        android:layout_centerHorizontal="true"
        android:textSize="80dp"
        android:layout_marginTop="55dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtBreatheCount"
        android:layout_below="@id/IVBreathe"
        android:layout_marginTop="20dp"
        android:textColor="#C0EB93"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="15dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtIHEMain"
        android:text="Inhale"
        android:background="@drawable/circle"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_below="@id/IVBreathe"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:layout_marginTop="55dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/BtnBreathe"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_corners"
        />
</RelativeLayout>